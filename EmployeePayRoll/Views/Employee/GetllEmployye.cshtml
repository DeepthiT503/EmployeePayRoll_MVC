@model IEnumerable<RepositoryLayer.Entity.EmployeeEntity>

@{
    ViewData["Title"] = "GetllEmployye";
}

<h1 style="color:chocolate;text-align:center">Employee Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<style>
    thead {
        color:burlywood;
        background-color:#42515F;
        border: 2px solid black;
    }
    th{
        border:2px solid black;
    }

    td {
        padding: 10px;
        text-align: center;
        border: 2px solid black;
        color: black;
    }

</style>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePath)" alt="Image" width="60px" height="60px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td >
               @Html.ActionLink("Update", "Edit", new { id = item.EmployeeId }, new { @class = "button-link update", style = "display: inline-block; padding: 8px 12px; text-align: center; text-decoration: none; border: 1px solid #007bff; border-radius: 4px; background-color: #007bff; color: #fff;" })
          </td>
            <td>
                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeId }, new { @class = "button-link details", style = "display: inline-block; padding: 8px 12px; text-align: center; text-decoration: none; border: 1px solid #28a745; border-radius: 4px; background-color: #28a745; color: #fff;" })
            </td>
            <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { @class = "button-link delete", style = "display: inline-block; padding: 8px 12px; text-align: center; text-decoration: none; border: 1px solid #dc3545; border-radius: 4px; background-color: #dc3545; color: #fff;" })
             </td>
        </tr>
}
    </tbody>
</table>
